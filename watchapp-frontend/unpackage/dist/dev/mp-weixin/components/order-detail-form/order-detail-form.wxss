













































/*
	地理位置
	*/
.res-tittle {
		text-align: center;
		background-color: #FFFFFF;
		height: 100rpx;
		margin-bottom: 20rpx;
}
.shop-adress-container {
		align-items: center;
		justify-content: center;
		display: flex;
}
.shop-name {
		font-size: 30rpx;
		font-weight: bold;
}
.shop-adress {
		font-size: 26rpx;
}
.problem {
		margin-top: 30rpx;
}
	/*问题描述*/
.problem-container {
		width: 100%;
		min-height: 170rpx;
		background-color: #fff;
		padding: 20rpx 40rpx 0 40rpx;
}
.problem-title {
		font-size: 32rpx;
}
.problem-desc {
		font-size: 30rpx;
		width: 690rpx;
		min-height: 110rpx;
		margin-top: 20rpx;
}
.placeholder-text {
		color: #bbb;
}
	/*图片上传*/
.upload-image-box {
		margin-top: 20rpx;
}
	/*报价*/
.price-container {
		background-color: #fff;
		height: 100rpx;
		padding: 0 40rpx;
		margin-top: 20rpx;
}
.price-label,
	.price-unit {
		display: inline-block;
		font-size: 32rpx;
		height: 100rpx;
		line-height: 100rpx;
		float: left;
}
.price-input{
		display: inline-block;
		font-size: 32rpx;
		height: 100rpx;
		line-height: 100rpx;
		float: left;
		text-align: right;
}
.price-label {
		width: 150rpx;
		font-weight: bold;
}
.price-input {
		width: 450rpx;
		margin-right: 10rpx;
}
.price-unit {
		width: 60rpx;
}
.tip {
		height: 100rpx;
		line-height: 100rpx;
		padding: 0 40rpx;
		color: #e8462f;
		font-size: 30rpx;
}
	/*按钮*/
.cancel-btn,
	.confirm-btn {
		width: 50%;
		height: 140rpx;
		line-height: 140rpx;
		text-align: center;
		font-size: 32rpx;
		display: inline-block;
}
.cancel-btn {
		color: #666;
		background-color: #fff;
}
.confirm-btn {
		color: #fff;
		background-color: #009245;
}
.order-state {
		padding-top: 20rpx;
		margin-left: 40rpx;
		background-color: #FFFFFF;
		font-size: 32rpx;
}
.timeline-container {
		background: #FFFFFF;
		margin-top: 20rpx;
}
.timeline {}
.two-bar-codes-container {
		margin-top: 20rpx;
		height: 460rpx;
		background-color: #FFFFFF;
		text-align: center;
}

