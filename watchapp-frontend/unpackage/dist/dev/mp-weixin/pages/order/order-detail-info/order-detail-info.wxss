
.container {
	padding-bottom: 140rpx;
}
.order-info-panel {
	margin-top: 20rpx;
	padding: 20rpx 40rpx;
	display: flex;
	justify-content: space-between;
	background-color: #ffffff;
}
.info-value {
	color: #009245;
}
/*图片上传*/
.upload-image-box {
	margin-top: 20rpx;
}
.operation-container{
	position:fixed;
	bottom:0;
	width:100%;
	line-height: 0rpx;
	z-index:100;
}
.cancel-btn{
	width:40%;
	height:140rpx;
	line-height: 140rpx;
	text-align: center;
	font-size: 32rpx;
	color:#666;
	background-color: #fff;
	border-top: #EEEEEE 1px solid;
	border-radius: 0rpx ;
	display: inline-block;
	z-index: 999;
}
.cancel-btn-lg {
	width: 100%;
	height:140rpx;
	line-height: 140rpx;
	text-align: center;
	font-size: 32rpx;
	color:#fff;
