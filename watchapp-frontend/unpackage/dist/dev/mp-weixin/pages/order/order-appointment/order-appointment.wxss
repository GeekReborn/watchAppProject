
.form-group {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;
	font-size: 32rpx;
	margin-top: 20rpx;
	background-color: #FFFFFF;
}
.form-container {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: center;
	width: 80%;
	height: 50rpx;
	padding: 20rpx;
}
.form-container.no-height {
	height: 1rpx;
	padding-top: 0;
	padding-bottom: 0;
	margin-top: 0;
	margin-bottom: 0;
}
.form-label {
	color: #333;
}
.form-content {
	color: #009245;
}
.border-top {
	border-top: #dddddd 1px solid;
}
.booking-btn {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	border-radius: 0;
	border: 0;
}
button[type=primary] {
	color: #fff;
	background-color: #009245;
}
.uni-input {
	width: 75%;
	margin-left: 10rpx;
}

